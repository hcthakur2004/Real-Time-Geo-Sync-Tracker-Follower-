{
  "buildCommand": "npm run build:client",
  "installCommand": "npm install && cd client && npm install && cd ../server && npm install",
  "outputDirectory": "client/.next",
  "functions": {
    "server/**": {
      "runtime": "nodejs20.x"
    }
  },
  "rewrites": [
    {
      "source": "/socket.io/(.*)",
      "destination": "/api/socket"
    }
  ]
}
